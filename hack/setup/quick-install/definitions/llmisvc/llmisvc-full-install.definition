DESCRIPTION: Install KServe LLM InferenceService and all related dependencies using helm.
RELEASE: true

TOOLS:
  - helm
  - yq

INCLUDE_DEFINITIONS:
  - ./llmisvc-dependency-install.definition
    
COMPONENTS:
  - name: kserve-helm
    env:
      ENABLE_LLMISVC: true
      ENABLE_KSERVE: false
      INSTALL_RUNTIMES: false
      INSTALL_LLMISVC_CONFIGS: true

