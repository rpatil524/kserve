DESCRIPTION: Install KServe Knative Mode and all related dependencies using helm.
RELEASE: true

TOOLS:
  - helm
  - kustomize
  - yq
  
INCLUDE_DEFINITIONS:
  - ./kserve-knative-mode-dependency-install.definition
    
COMPONENTS:
  - name: kserve-helm
    env:
      ENABLE_LLMISVC: false
      ENABLE_KSERVE: true
      INSTALL_RUNTIMES: true
      INSTALL_LLMISVC_CONFIGS: false
